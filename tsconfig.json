/* Visit https://aka.ms/tsconfig to read more about this file */

{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"module": "NodeNext",
		"rootDir": "./src",
		"moduleResolution": "Node",
		"baseUrl": "./src",
		"paths": {
			"@assets/*": ["assets/*"],
			"@assets": ["assets"],
			"@middleware/*": ["middleware/*"],
			"@middleware": ["middleware"],
			"@models/*": ["models/*"],
			"@models": ["models"],
			"@routes/*": ["routes/*"],
			"@routes": ["routes"],
			"@utils/*": ["utils/*"],
			"@utils": ["utils"]
		},
		"resolveJsonModule": true,
		"allowJs": true,
		"sourceMap": true,
		"outDir": "./build",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"include": [
		"./src/**/*.ts"
	]
}